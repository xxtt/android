<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/info_window_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/info_margin"
        android:layout_marginTop="@dimen/info_margin"
        android:text="title"
        android:textSize="11dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_window_title"
        android:layout_marginLeft="@dimen/info_margin"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_window_title"
        android:layout_toRightOf="@+id/image1"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_window_title"
        android:layout_toRightOf="@+id/image2"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/info_window_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_marginLeft="@dimen/info_margin"
        android:text="text"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_marginLeft="@dimen/info_margin"
        android:layout_toRightOf="@+id/info_window_description"
        android:text="@string/more"
        android:textColor="#ff5284fa"
        android:textSize="11dp"
        android:textStyle="italic" />

</RelativeLayout>