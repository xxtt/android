<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/news_category_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/news_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/news_category_image"
        android:text="title"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/news_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/news_place_title"
        android:layout_below="@+id/news_place_title"
        android:text="Text"
        android:textSize="14sp" />

</RelativeLayout> 